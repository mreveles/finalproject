@model IEnumerable<BuffTeks.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ComapnyLiaison)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LiaisonNumber)
                </th>
            <th></th>
        </tr>
    </thead>
